<doctrine-mapping>
    <entity name="App\User\Data\Model\UserData">
        <id name="id" type="integer">
            <generator strategy="AUTO"/>
        </id>

        <field name="name" type="string" length="50"/>
        <field name="surname" type="string" length="50"/>
        <field name="email" type="string" length="100"/>
        <field name="password" type="string" length="96"/>

        <many-to-many field="permissions" target-entity="App\User\Permission\Model\UserPermission">
            <join-table name="user_permission">
                <join-columns>
                    <join-column name="user_id"/>
                </join-columns>
                <inverse-join-columns>
                    <join-column name="permission_id"/>
                </inverse-join-columns>
            </join-table>
        </many-to-many>

        <field name="updatedAt" type="datetime_immutable" nullable="true"/>
        <field name="createdAt" type="datetime_immutable"/>
    </entity>
</doctrine-mapping>